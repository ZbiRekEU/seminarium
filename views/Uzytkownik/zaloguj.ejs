
<% include ../Partials/HeaderRoot.ejs  %>

<div id="preloader"><div id="status"><div class="spinner"></div></div></div>


   <!-- Begin page -->
   <div class="accountbg"></div>
   <div class="wrapper-page">

       <div class="card">
           <div class="card-body">

               <h3 class="text-center m-0">
                   <a href="/" class="logo logo-admin"><img src="public/assets/images/logo.png" height="30" alt="logo"></a>
               </h3>

               <div class="p-3">
                   <h4 class="font-18 m-b-5 text-center">Witaj Użytkowniku!</h4>
                   <p class="text-muted text-center">Zaloguj się do systemu Verniro.</p>
                   <% if(info == true){ %>
                   <div class="alert alert-success alert-dismissible fade show" role="alert">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                      <strong>Brawo!</strong> Teraz możesz zalogować się z nowym hasłem.
                  </div>
                    <% } %>
                   <% if(error == true){ %>
                   <div class="alert alert-danger alert-dismissible mb-0 show\\" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                       Podane hasło lub nazwa użytkownika jest błędne.
                  </div>
                  <% } %>
                   <form class="form-horizontal m-t-30" action="login" method="post">

                       <div class="form-group">
                           <label for="username">Nazwa użytkownika</label>
                           <input type="text" class="form-control" id="username" name="username" placeholder="Wpisz nazwę użytkownika">
                       </div>

                       <div class="form-group">
                           <label for="userpassword">Hasło</label>
                           <input type="password" class="form-control" id="userpassword" name="password" placeholder="Wpisz hasło">
                       </div>

                       <div class="form-group row m-t-20">
                           <div class="col-sm-6">
                               <div class="custom-control custom-checkbox">
                                   <input type="checkbox" class="custom-control-input" id="customControlInline">
                                   <label class="custom-control-label" for="customControlInline">Zapamiętaj mnie</label>
                               </div>
                           </div>
                           <div class="col-sm-6 text-right">
                               <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Zaloguj się</button>
                           </div>
                       </div>

                       <div class="form-group m-t-10 mb-0 row">
                           <div class="col-12 m-t-20">
                               <a href="przypomnij-haslo" class="text-muted"><i class="mdi mdi-lock"></i> Zapomniałeś hasła?</a>
                           </div>
                       </div>
                   </form>
               </div>

           </div>
       </div>

       <div class="m-t-40 text-center">
           <p class="text-white">Nie masz konta ? <a href="rejestracja" class="font-500 font-14 text-white font-secondary"> Zarejestruj się</a> </p>
           <p class="text-white">© <%= new Date().getFullYear() - 1; %> - <%= new Date().getFullYear(); %> Verniro. stworzone przez <i class="mdi mdi-heart text-danger"></i> <a href="https://mayam.pl" style="color:#fff; text-weight: bold;">Mayam</a></p>
       </div>

   </div>

<% include ../Partials/FooterRoot  %>
