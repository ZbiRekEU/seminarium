<%- contentFor('HeaderCss') %>
<link href="public/assets/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

<%- contentFor('breadcrumb') %>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="btn-group pull-right">
                <ol class="breadcrumb hide-phone p-0 m-0">
                    <li class="breadcrumb-item"><a href="#">Mój profil</a></li>
                    <li class="breadcrumb-item active">Edytuj użytkownika</li>
                </ol>
            </div>
            <h4 class="page-title">Edytuj Użytkownika: <%= user.username %></h4>
        </div>
    </div>
</div>

<%- contentFor('body') %>
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-6">
                                  <h4 class="mt-0 header-title">Edytuj dane</h4>
                                  <p class="text-muted m-b-30 font-14">Prosimy o poprawne wypełnienie wszystkich pól</p>
                                </div>
                                <div class="col-6">
                                  <h4 class="mt-0 header-title">Dane firmy:</h4>
                                  <p class="text-muted m-b-30 font-14">Wpisz dane wymagane do wystawienia faktury</p>
                                </div>
                              </div>
                                <form>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="username">Nazwa użytkownika:</label>
                                                <input id="username" name="username" type="text" class="form-control" value="<%= user.username %>" readonly>
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Adres E-mail:</label>
                                                <input id="email" name="email" type="text" class="form-control" value="<%= user.email %>" readonly>
                                            </div>
                                            <div class="row">
                                              <div class="form-group col-sm-6">
                                                <label for="name">Imie:</label>
                                                <input id="name" name="name" type="text" class="form-control"  value="<%= user.name %>">
                                              </div>
                                              <div class="form-group col-sm-6">
                                                <label for="surname">Nazwisko:</label>
                                                <input id="surname" name="surname" type="text" class="form-control" value="<%= user.surname %>">
                                              </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="phone">Numer telefonu:</label>
                                                <input id="phone" name="phone" type="text" class="form-control" value="<%= company.phone %>">
                                            </div>
                                            <button type="submit" class="btn btn-success waves-effect waves-light float-right" style="margin-top: 32px;">Zapisz zmiany</button>
                                        </div>

                                        <div class="col-sm-6">
                                          <div class="row">
                                            <div class="col-sm-8">
                                              <div class="form-group">
                                                  <label for="name">NIP:</label>
                                                  <input type="text" class="form-control" id="nip" name="nip" value="<%= company.nip %>">
                                              </div>

                                                <div class="form-group ">
                                                  <label for="useremail">Pełna nazwa firmy:</label>
                                                  <input type="text" class="form-control" id="full_name" name="full_name" value="<%= company.full_name %>">
                                                </div>

                                                <div class="form-group">
                                                  <label for="username">Krótka nazwa firmy:</label>
                                                  <input type="text" class="form-control" id="short_name" name="short_name" value="<%= company.short_name %>">
                                                </div>

                                              <div class="row">
                                                <div class="col-md-8">
                                                  <div class="form-group">
                                                    <label for="userpassword">Miasto:</label>
                                                    <input type="text" class="form-control" id="city" name="city" value="<%= company.city %>">
                                                  </div>
                                                </div>
                                                <div class="col-md-4">
                                                  <div class="form-group">
                                                      <label for="surname">Kod pocztowy:</label>
                                                      <input type="text" class="form-control" id="postal_code" name="postal_code" value="<%= company.postal_code %>">
                                                  </div>
                                                </div>
                                              </div>

                                              <div class="form-group">
                                                  <label for="surname">Ulica:</label>
                                                  <input type="text" class="form-control" id="street" name="street" value="<%= company.street %>">
                                              </div>



                                            </div>
                                            <div class="col-sm-4">
                                              <div class="form-group ">
                                                <label class="">Logo</label> <br/>
                                                <img src="public/assets/images/products/1.jpg" alt="product img" class="img-fluid" style="max-width: 200px;" />
                                                <br/>
                                                <button type="button" class="btn btn-purple m-t-10 waves-effect waves-light " style="margin-top: 26px;">Zmień logo</button>
                                              </div>

                                              <div class="row">
                                                <div class="col-md-6">

                                                  <div class="form-group">
                                                    <label for="name">Numer domu:</label>
                                                    <input type="text" class="form-control" id="house_number" name="house_number" value="<%= company.house_number %>">
                                                  </div>
                                                </div>
                                                <div class="col-md-6">
                                                  <div class="form-group">
                                                    <label for="surname">Mieszkanie:</label>
                                                    <input type="text" class="form-control" id="apartment_number" name="apartment_number" value="<%= company.apartment_number %>">
                                                  </div>
                                                </div>
                                              </div>
                                             </div>
                                          </div>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>
                </div>

<%- contentFor('FooterJs') %>
<script src="public/assets/plugins/select2/js/select2.min.js" type="text/javascript"></script>

<%- contentFor('BottomJs') %>
<script type="text/javascript">
    $(".select2").select2();
</script>
